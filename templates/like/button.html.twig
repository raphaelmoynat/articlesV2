{% if app.user %}

    <a href="{{ path(routeName, {id:object.id}) }}" class="likeButton btn btn-primary">
        Like
        (<span class="nbrLikes">{{ object.likes|length }}</span>)

        <i
                class="thumb bi bi-hand-thumbs-up{% if object.isLikedBy(app.user) %}-fill{% endif %}"
        ></i>

    </a>
{% else %}
    <p>Likes {{ object.likes|length }}</p>
{% endif %}