{% extends 'base.html.twig' %}

{% block title %}Hello NemController!{% endblock %}

{% block body %}
    <div class="row">
        {% for nem in nems %}
            <div class='col-md-4 d-flex justify-content-center'>

                <div class="card mb-3 " style="width: 18rem;">
                    <div class="card-body">
                        <div class="d-flex flex-wrap">
                            {% include 'image/image_or_not_image.html.twig' with {object:nem} %}

                        </div>
                        <h5 class="card-title">{{ nem.name }}</h5>
                        <p class="card-text">Price : {{ nem.price }}</p>
                        <p class="card-text">Cat√©gorie : {{ nem.category.name }}</p>
                        {% include 'like/button.html.twig' with { routeName:"app_like", object:nem } %}
                        <p class="card-text mt-5">Created at : {{ nem.createdAt|date("m/d/Y") }}</p>
                        <p class="card-text">Auteur : {{ nem.author.email }}</p>

                        <a href="{{ path("app_show", {id:nem.id}) }}" class="btn btn-primary">Voir</a>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

    {% if app.user %}
        <script src="{{ asset('like.js') }}"></script>
    {% endif %}

{% endblock %}
